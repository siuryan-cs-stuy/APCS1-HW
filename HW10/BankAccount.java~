public class BankAccount {
    
    private String fullName;
    private String password;
    private short PIN;
    private int accountNum;
    private float balance;

    public BankAccount(){
	fullName = "placeholder";
	password = "placeholder";
	PIN = 1234;
	accountNum = 0;
	balance = 0;
    }

    public BankAccount( String fullName, String password, short PIN,
			int accountNum, float balance ){
	fullName = fullName;
	password = password;
	PIN = PIN;
	accountNum = accountNum;
	balance = balance;
    }

    public void setFullName( String newName ){
	fullName = newName;
    }

    public void setPassword( String newPassword ){
	password = newPassword;
    }

    public void setPIN( short newPIN ){
	PIN = newPIN;
    }

    public void setAccountNum( int newAccountNum ){
	accountNum = newAccountNum;
    }

    public void setBalance( float newBalance ){
	balance = newBalance;
    }

    public void printInfo(){
	System.out.println("Your balance is: " + balance);
	System.out.println("Your name is: " + fullName);
	System.out.println("Your password is: " + password);
	System.out.println("Your PIN is: " + PIN);
	System.out.println("Your account number is: " + accountNum);
    }

    public float deposit( float amt ){
	balance += amt;
	return balance;
    }

    public float withdraw( float amt ){
	balance -= amt;
	return balance;
    }
}
