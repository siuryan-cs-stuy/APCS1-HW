public class Commafier {

    public static void main (String[] args) {
	System.out.println(commafyR(29384293));
    }

    public static String commafyR (int input) {
	if (input < 999) {
	    return input;
	} else {
	    int ones = input % 10;
	    int tens = input % 100;
	    int hundreds = input % 1000;
	    return commafy(input / 1000) + "," + hundreds + tens + ones; 
	}
    }

}
